@model List<v1web.Models.Product>

@{
    ViewBag.Title = "Cart";
}

<h2>Cart</h2>

<table class="table">
    <tr>
        <th>
           Name
        </th>
        <th>
            Price
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.ActionLink("Удалить", "RemoveFromCart", new { id=item.Id })
        </td>
    </tr>
}

    <h2>Total coast: @Model.Sum(x=>x.Price)</h2>

</table>
